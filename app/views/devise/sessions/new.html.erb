<div class="large-10 columns">

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "custom"}) do |f| %>
  <fieldset>
    <legend class="subheader">Sign in</legend>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div><label for="user_remember_me">
    <%= f.check_box :remember_me %>
      <span class="custom checkbox"></span>
     Remember me</label></div>
    <br />
  <% end -%>

  <div><%= f.submit "Sign in", :class => "button success"  %></div>
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>
</div>