<div class="large-8 columns">

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "devise custom" }) do |f| %>
    <fieldset>
      <legend>Forgot your password?</legend>

  <div>
  <% if resource.errors[:email].length > 0 %> <label class="error">Error</label> <% end %>
  <%= f.email_field :email, :autofocus => true,
                    :class => ("error" if resource.errors[:email].length > 0),
                    :placeholder => "Email Address"
  %></div>
  <% resource.errors[:email].each do |error| %>
    <small class="error"><%= error %></small>
  <% end %>

  <div><%= f.submit "Send me reset password instructions", :class => "button primary" %></div>
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>
</div>